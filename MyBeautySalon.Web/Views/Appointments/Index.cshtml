@model IEnumerable<AppointmentModel>
@{
    ViewData["Title"] = "Äppointments";
}
<p>Hello to my Beauty Salon Appointment Register</p>

<br />
<a class="btn btn-primary" asp-controller="Appointment" asp-action="Create">Create New Appointment</a>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Date</th>
            <th>CustomerName</th>
        </tr>
    </thead>
    @foreach(var appointment in @Model)
    {
        <tr>
            <td>
                @appointment.Id
            </td>
            @* <td>@Html.DisplayFor(modelItem => appointment.Date)</td> *@
            <td>
                @appointment.Date
            </td>
            <td>
                @appointment.CustomerName
            </td>
            <td>
                @Html.ActionLink("Editar","Edit", new { id = appointment.Id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = appointment.Id }) |
                <a class="btn btn-warning" asp-controller="Appointments" asp-action="Edit" asp-route-cid="appointment.Id">Edit</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@appointment.Id">Delete</a>
            </td>
        </tr>
    }
</table>

