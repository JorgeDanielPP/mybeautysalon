@model AppointmentModel
@{
    ViewData["Title"] = "Create Appointment";
}
<h1>Register a New Appointment</h1>
<form asp-action="Create">
    <div class="form-group">
        <label asp-formaction="Id" class="control-label"></label>
        <input asp-formaction="Id" class="form-control"/>
        <span asp-validation-formaction="Id" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-formaction="Date" class="control-label"></label>
        <input asp-formaction="Date" class="form-control" />
        <span asp-validation-formaction="Date" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-formaction="CustomerName" class="control-label"></label>
        <input asp-formaction="CustomerName" class="form-control" />
        <span asp-validation-formaction="CustomerName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary"/>
    </div>
</form>
